{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://minimal-browser.dev/schemas/overlay-message.json",
  "title": "OverlayMessage",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "description": "Heading displayed in the overlay card"
    },
    "body": {
      "type": "string",
      "description": "Primary text content rendered inside the overlay"
    },
    "variant": {
      "type": "string",
      "enum": ["info", "warning", "success", "error"],
      "default": "info",
      "description": "Optional style variant for the overlay"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string" },
          "command": { "type": "string" }
        },
        "required": ["label", "command"]
      },
      "description": "Optional action buttons surfaced in the overlay"
    }
  },
  "required": ["title", "body"]
}
